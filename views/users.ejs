.nav {
  overflow: hidden;
  position: absolute;
  left: 20%;
  top: 6%;
  width: auto;
  height: 50px;
  margin-top: -25px;
  background: #fff;
  border-radius: 5px;
  transform: translate3d(-50%, 0, 0);
